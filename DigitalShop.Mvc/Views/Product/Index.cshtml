@model IEnumerable<Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product list</h2>
        </div>
        <div class="col-6 text-lg-end">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="fa-solid fa-plus me-2"></i> Create new product
            </a>
        </div>
    </div>
    <br /> <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Product name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Application type
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="30%">@obj.Name</td>
                        <td width="10%">@obj.Price</td>
                        <td width="20%">@obj.Category.Name</td>
                        <td width="20%">@obj.ApplicationType.Name</td>
                        <td class="text-center">
                            <div class="w-100 btn-group" role="group">
                                <a asp-route-id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                                    <i class="fa-regular fa-pen-to-square me-1"></i>Edit
                                </a>
                                <a asp-route-id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fa-regular fa-trash-can me-1"></i>
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No product exists.</p>
    }
</div>
